{
	"compileOnSave": false,
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": ["es2017", "es2020.Promise", "ES6", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": true,
		"target": "es2017"
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*"]
}
